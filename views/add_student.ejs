<link rel="stylesheet" href="/css/add_Student.css" />

<% if(locals.user) { %>

<div class="add-student-container">

  <!-- Add Student Container Starts  -->

  <h1>Add Student</h1>

  <form action="/student/create-student" method="POST" id="new-student-form">
    <div class="col-md-4 mb-3 input-container">
      <label for="name">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter Your Name"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="batch">Batch</label>
      <input
        type="text"
        class="form-control"
        id="batch"
        name="batch"
        placeholder="Enter Batch"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="email">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter Email"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="age">Age</label>
      <input
        type="number"
        class="form-control"
        id="age"
        name="age"
        placeholder="Enter Age"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="gender">Gender</label>
      <input
        type="text"
        class="form-control"
        id="gender"
        name="gender"
        placeholder="Enter Gender"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="college">College Name</label>
      <input
        type="text"
        class="form-control"
        id="college"
        name="college"
        placeholder="Enter College Name"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="status" style="margin-right: 20px">Placement Status</label>
      <select
        class="custom-select custom-select-lg mb-3 mt-3"
        id="status"
        name="status"
      >
        <option selected disabled>Placement Status</option>
        <option value="Placed">Placed</option>
        <option value="Not Placed">Not Placed</option>
      </select>
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="dsaScore">DSA Score</label>
      <input
        type="number"
        class="form-control"
        id="dsaScore"
        name="dsaScore"
        placeholder="Enter DSA Score"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="webDevScore">Web Development Score</label>
      <input
        type="number"
        class="form-control"
        id="webDevScore"
        name="webDevScore"
        placeholder="Enter Web Development Score"
        required
      />
    </div>
    <div class="col-md-4 mb-3 input-container">
      <label for="reactScore">React Score</label>
      <input
        type="number"
        class="form-control"
        id="reactScore"
        name="reactScore"
        placeholder="Enter React Score"
        required
      />
    </div>

    <div class="input-container">
      <button type="submit" class="btn btn-primary btn-lg add-student-btn">
        Add Student
      </button>
    </div>
  </form>

    <!-- Add Student Container Ends  -->

</div>

<% } %>


<script src="/js/add_student.js"></script>
