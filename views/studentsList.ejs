<link rel="stylesheet" href="/css/studentList.css" />

<% if(locals.user) { %>
  
<!--  This will display all the students added along with their scores  -->
<div class="students-list-container">

  <!-- Students List Container Starts -->

  <table border="1" class="table table-success table-hover table-bordered">
    <tr>
      <th rowspan="2">NAME</th>
      <th rowspan="2">BATCH</th>
      <th rowspan="2">COLLEGE</th>
      <th colspan="3" style="text-align: center">SCORE</th>
      <th rowspan="2">DELETE STUDENT</th>
      <th rowspan="2">VIEW DETAILS</th>
    </tr>
    <tr>
      <th>DSA</th>
      <th>WebD</th>
      <th>React</th>
    </tr>

    <% for(student of student){ %>
    <tr>
      <td><%= student.name.toUpperCase() %></td>
      <td><%= student.batch %></td>
      <td><%= student.college.toUpperCase() %></td>
      <td><%= student.course_score.dsaScore %></td>
      <td><%= student.course_score.webDevScore %></td>
      <td><%= student.course_score.reactScore %></td>
      <td>
        <a href="/student/delete-student/<%= student._id %>">
          <i class="fa-solid fa-trash-can fa-lg" style="color: red"></i>
        </a>
      </td>
      <td>
        <a href="/student/show-student-details/<%= student._id %>">
          <img src="https://cdn-icons-png.flaticon.com/512/5005/5005221.png" class="view-detials-icon" alt="">
        </a>
      </td>
    </tr>
    <% } %>
  </table>

    <!-- Students List Container Ends -->

</div>

<a href="/student/add-student">
    <button  type="button" class="btn add-student-btn">Add student</button>
</a>

<% } %>
